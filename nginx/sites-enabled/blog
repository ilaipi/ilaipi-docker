server {
    listen 80;
    server_name blog.ilaipi.top www.ilaipi.top;
    rewrite ^(.*)$ https://${server_name}$1 permanent;
}

server {
    listen   443 ssl;

    # generated by acme.sh
    ssl_certificate ssl/*.ilaipi.top.fullchain.cer;
    ssl_certificate_key ssl/*.ilaipi.top.key;


    include ssl_params;
    server_name  *.ilaipi.top;

    location / {
        proxy_pass http://blog:80;
    }
    location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
        proxy_pass http://blog:80;
        expires 7d;
        access_log off;
    }
    location ~ /wp* {
        proxy_pass http://blog:80;
    }
}
